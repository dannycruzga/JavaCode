import java.util.Scanner;
import java.util.Random;
public class RockPaperScissor {

	public static void main(String[] args) {

		Scanner key = new Scanner(System.in);
		
		Random r = new Random();
		
        boolean playAgain = true;

		
        while (playAgain) {
            int playerScore = 0, computerS = 0;

            for (int i = 1; i <= 3; i++) {
                System.out.print("Enter rock, paper, or scissors: ");
               
                String playerScore1 = key.nextLine().toLowerCase();

                int c = r.nextInt(3);
               
                String comp = (c == 0) ? "rock" : (c == 1) ? "paper" : "scissors";
               
                System.out.println("Computer chose: " + comp);

                if (!(playerScore1.equals("rock") || playerScore1.equals("paper") || playerScore1.equals("scissors"))) 
                {
                    computerS++;
                   
                    System.out.println("Invalid input! Computer gets point.");
              
                } 
                else if (playerScore1.equals(comp)) 
                
                {
                	System.out.println("Draw.");
               
                } 
                else if ((playerScore1.equals("rock") && comp.equals("scissors")) ||
                     
                		   (playerScore1.equals("paper") && comp.equals("rock")) ||
                           (playerScore1.equals("scissors") && comp.equals("paper"))) 
                {
                    
                   
                    System.out.println("You win this round!");
              
                }  
                else 
               
                {
                    computerS++;
                    System.out.println("Computer wins this round!");
                }
                System.out.println("Score: You " + playerScore1 + " - " + computerS + " Computer\n");
            }

            if (playerScore > computerS) System.out.println("You won the game!");
          
            else if (computerS > playerScore) System.out.println("Computer won the game!");
            
            else System.out.println("It's a tie!");

            System.out.print("Play again? (yes/no): ");
           
            playAgain = key.nextLine().equalsIgnoreCase("yes");
        }
        key.close();
    }
}

